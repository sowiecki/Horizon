<section class='generic-form'>
  <h2>Login</h2>
  <%= flash[:notice] if flash[:notice] %>

  <%= form_tag login_path do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "login" %>
  <% end %>
</section>
